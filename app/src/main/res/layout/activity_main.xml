<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mid_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/midtrans_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mobile_logo"
        android:layout_width="154dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mid_logo"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/mobile_sdk_logo" />

    <Button
        android:id="@+id/btn_snapAuto"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:text="Pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mobile_logo"
        app:layout_constraintVertical_bias="0.089" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_snap_manual_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paste the Snap token here :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edt_snap_token"
        app:layout_constraintTop_toBottomOf="@+id/btn_snapAuto"
        app:layout_constraintVertical_bias="0.163" />

    <EditText
        android:id="@+id/edt_snap_token"
        android:layout_width="342dp"
        android:layout_height="53dp"
        android:hint="PUT SNAP TOKEN HERE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_snap_manual_title"
        app:layout_constraintVertical_bias="0.04" />

    <EditText
        android:id="@+id/edt_clientKey"
        android:layout_width="342dp"
        android:layout_height="53dp"
        android:hint="PUT YOUR CLIENT-KEY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_snap_token"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/btn_withToken"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with manual snap token"
        app:icon="@drawable/ic_autorenew_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_snap_token"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_clientKey"
        app:layout_constraintVertical_bias="0.037" />


    <Button
        android:id="@+id/btn_toCustomFinishPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Shared Preference"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_snap_token"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_withToken"
        app:layout_constraintVertical_bias="0.613" />

</androidx.constraintlayout.widget.ConstraintLayout>